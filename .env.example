# Server Configuration
NODE_ENV=production
PORT=3001
API_BASE_URL=https://api.yourdomain.com

# Database Configuration
DATABASE_URL=your-database-url
SUPABASE_URL=your-supabase-url
SUPABASE_SERVICE_KEY=your-supabase-service-key

# Redis Configuration
REDIS_URL=your-redis-url  # Railway Redis for development
REDIS_UPSTASH_URL=  # Upstash Redis URL for production (optional)
USE_UPSTASH_REDIS=false  # Set to true in production to use Upstash

# JWT Configuration
JWT_ACCESS_SECRET=generate-a-long-random-string
JWT_REFRESH_SECRET=generate-another-long-random-string
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Admediacards API
ADMEDIACARDS_API_KEY=your-api-key
ADMEDIACARDS_API_SECRET=your-api-secret
ADMEDIACARDS_BASE_URL=https://api.admediacards.com/v1
ADMEDIACARDS_WEBHOOK_SECRET=your-webhook-secret
ADMEDIACARDS_ACCOUNT_ID=your-account-id
ADMEDIACARDS_TEST_MODE=false
ADMEDIACARDS_MAX_TEST_CARDS=1

# xMoney API
XMONEY_API_KEY=your-xmoney-api-key
XMONEY_WEBHOOK_SECRET=your-xmoney-webhook-secret
XMONEY_USE_LIVE=false
XMONEY_RETURN_URL=https://yourdomain.com/crypto/success
XMONEY_CANCEL_URL=https://yourdomain.com/crypto/cancel
XMONEY_CALLBACK_URL=https://api.yourdomain.com/api/v1/webhooks/xmoney

# Rate Limiting
RATE_LIMIT_WHITELIST_IPS=  # Comma-separated list of IPs to bypass rate limiting (e.g., "192.168.1.1,10.0.0.1")

# Security Configuration
ENCRYPTION_KEY=generate-a-32-character-encryption-key
ALLOWED_ORIGINS=https://yourdomain.com,https://app.yourdomain.com

# Email Configuration
SENDGRID_API_KEY=your-sendgrid-api-key
RESEND_API_KEY=your-resend-api-key
FROM_EMAIL=noreply@yourdomain.com
FROM_NAME=YourCompany

# Add other required variables...
