# Server Configuration
NODE_ENV=production
PORT=3001
API_BASE_URL=https://api.yourdomain.com

# Database Configuration
DATABASE_URL=your-database-url
SUPABASE_URL=your-supabase-url
SUPABASE_SERVICE_KEY=your-supabase-service-key

# Redis Configuration
REDIS_URL=your-redis-url  # Railway Redis for development
REDIS_UPSTASH_URL=  # Upstash Redis URL for production (optional)
USE_UPSTASH_REDIS=false  # Set to true in production to use Upstash

# JWT Configuration
JWT_ACCESS_SECRET=generate-a-long-random-string
JWT_REFRESH_SECRET=generate-another-long-random-string
JWT_ACCESS_EXPIRY=24h
JWT_REFRESH_EXPIRY=7d

# Admediacards API
ADMEDIACARDS_API_KEY=your-api-key
ADMEDIACARDS_API_SECRET=your-api-secret
ADMEDIACARDS_BASE_URL=https://api.admediacards.com/v1
ADMEDIACARDS_WEBHOOK_SECRET=your-webhook-secret
ADMEDIACARDS_ACCOUNT_ID=your-account-id
ADMEDIACARDS_TEST_MODE=false
ADMEDIACARDS_MAX_TEST_CARDS=1

# xMoney API
XMONEY_API_KEY=your-xmoney-api-key
XMONEY_WEBHOOK_SECRET=your-xmoney-webhook-secret
XMONEY_USE_LIVE=false
XMONEY_API_TIMEOUT=30000
XMONEY_RETURN_URL=https://yourdomain.com/crypto/success
XMONEY_CANCEL_URL=https://yourdomain.com/crypto/cancel
XMONEY_CALLBACK_URL=https://api.yourdomain.com/api/v1/webhooks/xmoney

# Rate Limiting
RATE_LIMIT_WHITELIST_IPS=  # Comma-separated list of IPs to bypass rate limiting (e.g., "192.168.1.1,10.0.0.1")

# Admin Configuration
ADMIN_EMAILS=  # Comma-separated list of admin emails for Bull Dashboard access

# Security Configuration
ENCRYPTION_KEY=generate-a-32-character-encryption-key
ALLOWED_ORIGINS=https://yourdomain.com,https://app.yourdomain.com
TURNSTILE_SECRET_KEY=your-cloudflare-turnstile-secret-key

# Email Configuration
SENDGRID_API_KEY=your-sendgrid-api-key
RESEND_API_KEY=your-resend-api-key
FROM_EMAIL=noreply@yourdomain.com
FROM_NAME=YourCompany
INVOICE_FROM_EMAIL=invoices@yourdomain.com
INVOICE_FROM_NAME=YourCompany Finance
FRONTEND_URL=https://app.yourdomain.com

# Monitoring
SENTRY_DSN=  # Your Sentry DSN for error tracking

# Crypto Business Configuration
DEFAULT_COUNTRY_CODE=US
MIN_DEPOSIT_AMOUNT=10
MAX_DEPOSIT_AMOUNT=10000
WITHDRAWAL_FEE_PERCENTAGE=0.02
EXCHANGE_RATE_CACHE_TTL_MS=300000

# KYC Configuration
KYC_PROVIDER=sumsub
KYC_API_KEY=your-kyc-api-key
KYC_SECRET_KEY=your-kyc-secret-key

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=https://api.yourdomain.com/api/v1/auth/google/callback

# Feature Flags
ENABLE_DEBUG_LOGS=false
MOCK_EXTERNAL_APIS=false
ENABLE_REGISTRATION=true
ENABLE_CARD_CREATION=true
ENABLE_CRYPTO_DEPOSITS=true
ENABLE_KYC_VERIFICATION=false
MAINTENANCE_MODE=false
